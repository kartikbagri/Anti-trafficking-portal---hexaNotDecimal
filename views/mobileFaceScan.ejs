<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal | Face Scan</title>
    <link rel="stylesheet" href="css/face-scan.css">
    <link rel="stylesheet" href="css/main.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <%- include('partials/header') %>
    <div id="overlay" class="overlay"></div>
    <div id="missingModal">
        <div class="missing-modal-content">
            <ul>
                <li>
                    <h3>Name: </h3>
                    <span id="modalMissingPersonName">
                </li>
            </ul>
            <ul>
                <li>
                    <h3>Age: </h3>
                    <span id="modalMissingPersonAge">
                </li>
            </ul>
            <ul>
                <li>
                    <h3>Gender: </h3>
                    <span id="modalMissingPersonGender">
                </li>
            </ul>
        </div>
    </div>
    <form class="contentarea" method="POST" enctype="multipart/form-data">
        <input type="file" name="inputImg" id="" capture="capture">
        <button id="startbutton">Take and scan photo</button>
    </form>
    <div id="loader">
        <object data="images/loader.svg" width="90" height="90"></object>
    </div>
    <div id="result">
        <h1 id="resultText"></h1>
        <btn id="missingReportShowBtn">Show Missing Report</btn>
    </div>

    <script src="javascript/mobileFaceScan.js"></script>
</body>
</html>